<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid
                        android:color="#ffffff">
                    </solid>

                    <corners android:radius="3dp" />

                    <padding
                        android:bottom="5dp"
                        android:left="5dp"
                        android:right="5dp"
                        android:top="5dp" />
                    <stroke
                        android:width="1dp"
                        android:color="#aaa"/>
                </shape>
            </item>
            <item android:gravity="bottom|right" android:drawable="@drawable/ic_expand">
            </item>
        </layer-list>
    </item>
</selector>